<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <ImageView
            android:id="@+id/picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/subscriber"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/action_settings"
            android:layout_toRightOf="@id/picture"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginStart="-10dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="time"
            android:layout_below="@id/subscriber"
            android:layout_toEndOf="@id/picture"
            android:layout_marginStart="-10dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/share_state"
            android:layout_below="@id/subscriber"
            android:layout_toRightOf="@id/time"
            />

        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/choice"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            />


    </RelativeLayout>

    <TextView
        android:id="@+id/main_recyclerView_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ajsdghasljsadjkalsdjgklasjdglasjd;"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"/>

    <ImageView
        android:id="@+id/posted_picture"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:scaleType="fitXY"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageButton
            android:id="@+id/like"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:src="@drawable/tumb"
            android:scaleType="centerInside"
            android:background="@color/colorWhite"
            android:layout_gravity="start"
            android:layout_marginLeft="5dp"/>


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/comment"
            android:layout_gravity="end|center"
             />

        <TextView
            android:id="@+id/likePeople"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/like_count"
            android:layout_gravity="start"
            android:layout_marginTop="10dp"
            android:layout_marginStart="60dp"/>


    </FrameLayout>

    <View
        android:layout_width="400dp"
        android:layout_height="1dp"
        android:background="@color/colorGrey"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/like"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:background="@color/colorWhite"
            android:layout_gravity="center"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/comment"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:background="@color/colorWhite"
            android:layout_gravity="center"/>


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/share"
            android:layout_weight ="1"
            android:scaleType="centerInside"
            android:background="@color/colorWhite"
            android:layout_gravity="center"/>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/colorGrey"/>

</LinearLayout>